extends ../layouts/common

block content
    h1 Login

    if errors
        each error in errors
            .alert.alert-danger= error

    form(method="post")
        .form-group
            label(for="email") Email
            input#email(name="email", type="text",value = value ? value.email : "", class="form-control")

        .form-group
            label(for="password") Password
            input#password(name="password" ,type="text", value = value ? value.password : "", class="form-control")

        button(class="btn btn-primary") Login
        