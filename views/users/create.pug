extends ../layouts/common

block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="post", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name(name="name", type="text",value = value ? value.name : "", class="form-control")

        .form-group
            label(for="gender") Gender
            input#gender(name="gender" ,type="text", value = value ? value.gender : "", class="form-control")

        .form-group
            label(for="age") Age
            input#age(name="age", type="text", value = value ? value.age : "", class="form-control")
        
        .form-group
            label(for="avatar") Avatar
            input#avatar(name="avatar", type="file", class="form-control-file")

        button(class="btn btn-primary") Create
        